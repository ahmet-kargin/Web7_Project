@model EF_CodeFirst.Models.Publisher
@{
    ViewData["Title"] = "Create";
}
<h5 class="display-5 bg-warning w-100 p-3 text-white">Add Publisher</h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="PublisherName" class="control-label">Publisher's Name</label>
                <input type="text" asp-for="PublisherName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="PublisherCity" class="control-label">Publisher's City</label>
                <input type="text" asp-for="PublisherCity" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="PublisherMail" class="control-label">Publisher's Mail</label>
                <input type="text" asp-for="PublisherMail" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success">
            </div>
        </form>
    </div>
</div>