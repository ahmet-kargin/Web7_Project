@model EF_CodeFirst.Models.Book
@{
    ViewData["Title"] = "Create";
}
<h5 class="display-5 bg-warning w-100 p-3 text-white">Add Book</h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Create">
            <input type="hidden" asp-for="BookId">
            <div class="form-group">
                <label asp-for="BookName" class="control-label">Book Name</label>
                <input type="text" asp-for="BookName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BookYearOfPublication" class="control-label">Year of Publication</label>
                <input type="text" asp-for="BookYearOfPublication" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BookEditionNumber" class="control-label">Edition Number</label>
                <input type="text"  asp-for="BookEditionNumber" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BookNumberOfPage" class="control-label">Number of Page</label>
                <input type="text" asp-for="BookNumberOfPage" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BookQuantity" class="control-label">Quantity</label>
                <input type="text" asp-for="BookQuantity" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category Name</label>
                <select  asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"></select>

            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label">Author Name</label>
                <select  asp-for="AuthorId" asp-items="ViewBag.AuthorId" class="form-control"></select>

            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label">Publisher Name</label>
                <select  asp-for="PublisherId" asp-items="ViewBag.PublisherId" class="form-control"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success">
            </div>
        </form>
    </div>
</div>