@model EF_Code.Models.Yayinevleri
@{
    ViewData["Title"] = "Delete";
}
<h1 class="display-4">Yayınevi Detayı</h1>
<hr>
<div class="row">
    <div class="col-sm-3">
        Tür Id:
    </div>
    <div class="col-sm-5">
        @Model.Id
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        Kitap Türü:
    </div>
    <div class="col-sm-5">
        @Model.Ad
    </div>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id">
    <input type="submit" value="Sil" class="btn btn-danger">
</form>
<a class="btn btn-primary" asp-action="Index">Kitap Türlerine Dön</a>