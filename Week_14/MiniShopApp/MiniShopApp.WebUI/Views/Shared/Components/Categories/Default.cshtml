@model List<Category>
<div class="list-group">
    <a
       asp-controller="MiniShop"
           asp-action="List"
           asp-route-category=""
       class="list-group-item list-group-item-action">Tümünü Göster</a>
    @foreach (var category in Model)
    {
        <a
           asp-controller="MiniShop"
           asp-action="List"
           asp-route-category="@category.Url"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.Url ? "active" : "") ">@category.Name</a>
    }
</div>
