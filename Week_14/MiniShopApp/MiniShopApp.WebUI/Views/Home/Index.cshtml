@model List<Product>

<div class="row">
    <div class="col-md-3">
        @* Buraya kategoriler gelecek *@
        @await Component.InvokeAsync("Categories")
        <div class="card mt-3">
            <div class="card-header">
                <h5>Search</h5>
            </div>
            <div class="card-body">
                <form action="Search">
                    <div class="form-group">
                        <input type="text" name="searchString" class="form-control" placeholder="Search"/>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-sm btn-danger w-100">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    @* Partial view çağırmanın 2 yolu vardır.
                        1) HTML helper kullanmak
                        2)Taghelper kullanmak*@
                    @await Html.PartialAsync("_Product", product) 
                </div>
            }
        </div>
    </div>
</div> 