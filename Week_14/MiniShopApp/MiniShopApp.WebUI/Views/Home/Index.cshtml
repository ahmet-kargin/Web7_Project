@model List<Product>

<div class="row">
    <div class="col-md-3">
        @* Buraya kategoriler gelecek *@
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    @* Partial view çağırmanın 2 yolu vardır.
                        1) HTML helper kullanmak
                        2)Taghelper kullanmak*@
                    @await Html.PartialAsync("_Product", product) 
                </div>
            }
        </div>
    </div>
</div> 