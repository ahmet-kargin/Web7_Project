@model RegisterModel
<h6 class="display-4">Register</h6>
<hr />
<form asp-controller="Account" asp-action="Register"  method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="text-danger" asp-validation-for="All"></div>
            <div class="form-group row mt-2">
                <label class="col-md-3 col-form-label">First Name:</label>
                <div class="col-md-9">
                    <input asp-for="FirstName" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <label class="col-md-3 col-form-label">Last Name:</label>
                <div class="col-md-9">
                    <input asp-for="LastName" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <label class="col-md-3 col-form-label">User Name:</label>
                <div class="col-md-9">
                    <input asp-for="UserName" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <label class="col-md-3 col-form-label">Password:</label>
                <div class="col-md-9">
                    <input asp-for="Password" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <label class="col-md-3 col-form-label">Repassword:</label>
                <div class="col-md-9">
                    <input asp-for="RePassword" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <label class="col-md-3 col-form-label">EMail:</label>
                <div class="col-md-9">
                    <input asp-for="EMail" type="text" class="form-control" />
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-md-9 offset-md-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>