<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta na me="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>@ViewBag.Kemal - Ders Blog Site</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fs-3" href="#">Web-7 Ders Blog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse fs-4" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hakkımızda</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Dersler
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="lesson">Tüm Dersler</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">HTML</a></li>
                                <li><a class="dropdown-item" href="#">Css</a></li>
                                <li><a class="dropdown-item" href="#">Bootstrap</a></li>
                                <li><a class="dropdown-item" href="#">JavaScript</a></li>
                                <li><a class="dropdown-item" href="#">JQuery</a></li>
                                <li><a class="dropdown-item" href="#">React</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">C#</a></li>
                                <li><a class="dropdown-item" href="#">PHP</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">İletişim</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Ara..." aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Ara</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="p-3">
        @RenderBody();
    </main>

    <footer>
        <p>Bu site Web-7 grubu tarafından hazırlanmıştır. Copyright 2022</p>
    </footer>
    <!--SCRIPTS-->
    <script src="~/js/bootstrap.bundle.min.js"></script>
