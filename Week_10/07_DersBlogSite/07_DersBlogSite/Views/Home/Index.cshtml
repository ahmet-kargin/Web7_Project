@model List<_07_DersBlogSite.Models.Article>

<div class="row mb-2">
    @foreach (var article in Model)
    {
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@article.ArticleTitle</h5>
                    <p class="card-text">@article.ArticleContent</p>
                    <a href="#" class="btn btn-primary col-12">@article.art</a>
                </div>
            </div>
        </div>


    }
</div>




